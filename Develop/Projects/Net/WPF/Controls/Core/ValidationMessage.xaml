<Window x:Class="Savchin.Wpf.Controls.Core.ValidationMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ValidationMessage" Height="300" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30"  />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Name="labelTitle" Content="Title"/>

        <TextBox Grid.Row="1"  HorizontalAlignment="Stretch" Name="boxText" Text="TextBlock" 
                           VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"  />

     
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="buttonContinue" VerticalContentAlignment="Stretch" Content="Close" Click="ButtonCloseClick"/>
        </StackPanel>
    </Grid>
</Window>
